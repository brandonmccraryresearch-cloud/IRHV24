[
  {
    "type": "MetaboLightsRESTTool",
    "name": "metabolights_list_studies",
    "description": "List all MetaboLights studies with pagination. Returns a list of study IDs (e.g., 'MTBLS1', 'MTBLS2'). Use metabolights_get_study to get detailed information for a specific study ID.",
    "parameter": {
      "type": "object",
      "properties": {
        "size": {
          "type": "integer",
          "description": "Number of studies per page (default: 20)",
          "default": 20,
          "minimum": 1,
          "maximum": 100
        },
        "page": {
          "type": "integer",
          "description": "Page number (default: 0)",
          "default": 0,
          "minimum": 0
        }
      },
      "required": []
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/metabolights/ws/studies",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "description": "List of studies with metadata"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "test_examples": [
      {
        "size": 10
      }
    ]
  },
  {
