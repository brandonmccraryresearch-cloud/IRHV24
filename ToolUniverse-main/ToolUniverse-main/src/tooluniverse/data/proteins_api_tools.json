[
  {
    "type": "ProteinsAPIRESTTool",
    "name": "proteins_api_get_protein",
    "description": "Get comprehensive protein information from Proteins API by UniProt accession. Returns protein annotations, sequences, features, and cross-references.",
    "parameter": {
      "type": "object",
      "properties": {
        "accession": {
          "type": "string",
          "description": "UniProt protein accession (e.g., 'P05067', 'P04637')"
        },
        "format": {
          "type": "string",
          "enum": ["json", "xml"],
          "default": "json"
        }
      },
      "required": ["accession"]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/proteins/api/proteins/{accession}",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "description": "Complete protein information"
        }
      }
    },
    "test_examples": [
      {
        "accession": "P05067"
      },
      {
        "accession": "P04637"
      }
    ]
  },
  {
    "type": "ProteinsAPIRESTTool",
    "name": "proteins_api_get_variants",
    "description": "Get variation data for a protein including ClinVar, COSMIC, and other variant annotations. Note: Variations endpoint may not be available for all proteins. If this returns 404, use proteins_api_get_protein instead which includes variant information. Returns variant information with clinical significance and population frequencies.",
    "parameter": {
      "type": "object",
      "properties": {
        "accession": {
          "type": "string",
          "description": "UniProt protein accession"
        },
        "format": {
          "type": "string",
          "enum": ["json", "xml"],
          "default": "json"
        }
      },
      "required": ["accession"]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/proteins/api/proteins/{accession}/variations",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "array",
          "description": "List of protein variations"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "test_examples": [
      {
        "accession": "P04637"
      }
    ]
  },
