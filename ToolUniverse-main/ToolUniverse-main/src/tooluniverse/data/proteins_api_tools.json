  {
    "type": "ProteinsAPIRESTTool",
    "name": "proteins_api_search",
    "description": "Search proteins in Proteins API. Note: The Proteins API search endpoint may have limitations. For reliable protein search, consider using ebi_search_domain with domain='uniprot' instead. This tool attempts to search by name or accession, but may not work for all query types.",
    "parameter": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Search query (e.g., protein name, gene name, organism). Internally converted to 'q' parameter for Proteins API."
        },
        "size": {
          "type": "integer",
          "description": "Number of results to return (default: 25)",
          "default": 25,
          "maximum": 100
        },
        "offset": {
          "type": "integer",
          "description": "Offset for pagination (default: 0)",
          "default": 0
        },
        "format": {
          "type": "string",
          "enum": ["json", "xml"],
          "default": "json"
        }
      },
      "required": ["query"]
    },
    "fields": {
      "endpoint": "https://www.ebi.ac.uk/proteins/api/proteins",
      "return_format": "JSON"
    },
    "return_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "description": "Search results"
        },
        "count": {
          "type": "integer"
        }
      }
    },
    "test_examples": [
      {
        "query": "BRCA1",
        "size": 10
      },
      {
        "query": "Homo sapiens",
        "size": 20
      }
    ]
  }
]
